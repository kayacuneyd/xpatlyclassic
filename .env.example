# Application
APP_NAME=Xpatly
APP_ENV=production
APP_DEBUG=false
APP_URL=https://xpatly.com

# Database
DB_CONNECTION=sqlite
DB_PATH=storage/database/database.sqlite

# MySQL (for future migration)
# DB_CONNECTION=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=xpatly
# DB_USERNAME=root
# DB_PASSWORD=

# Mail
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=587
MAIL_USERNAME=noreply@xpatly.com
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@xpatly.com
MAIL_FROM_NAME=Xpatly

# Mapbox
MAPBOX_API_KEY=

# Twilio (for SMS OTP)
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Security
SESSION_LIFETIME=1440
SESSION_SECURE=true
CSRF_TOKEN_NAME=_token

# Cache
CACHE_ENABLED=true
CACHE_LIFETIME=900

# Upload
MAX_FILE_SIZE=5242880
MAX_FILES_PER_LISTING=40
UPLOAD_PATH=public/uploads/listings
